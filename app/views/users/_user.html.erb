<div class="col-sm-4 mt-3 user-card" id="user_<%= user.id %>">
  <div class="card">
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><b>First name:</b> <%= user.first_name %></li>
      <li class="list-group-item"><b>Last name:</b> <%= user.last_name %></li>
      <li class="list-group-item"><b>Salary:</b> <%= user.salary %></li>
    </ul>
    <div class="card-body">
      <%= link_to 'Edit', edit_user_path(user), remote: true, class: 'btn btn-warning' %>
      <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?', remote: true }, class: 'btn btn-danger delete' %>
    </div>
  </div>
</div>