<%= form_for @user, remote: true do |form| %>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="mb-3">
          <%= form.label :first_name, class: 'col-form-label' %>
          <%= form.text_field :first_name, class: 'form-control first-name-field' %>
        </div>

        <div class="mb-3">
          <%= form.label :last_name, class: 'col-form-label' %>
          <%= form.text_field :last_name, class: 'form-control last-name-field' %>
        </div>

        <div class="mb-3">
          <%= form.label :salary, class: 'col-form-label' %>
          <%= form.text_field :salary, class: 'form-control salary-field' %>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= form.submit class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
<% end %>